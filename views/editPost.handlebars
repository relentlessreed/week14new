<style>
  button{ cursor: pointer; margin: 15px 0; }
</style>
<div class='row'>
  <div class='col-auto'>
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class='row mt-4'>
  <div class='col-md-6'>
    <h3>Edit Blog Post:</h3>

    <form class='edit-form'>
      <div class='form-group'>
        <label for='project-name'>Title:</label>
        <input
          class='form-input'
          type='text'
          id='post-title'
          name='project-name'
          value='{{post.title}}'
        />
      </div>
      <div class='form-group'>
        <label for='post-contents'>Contents:</label>
        <textarea
          class='form-input'
          id='post-contents'
          name='project-desc'
        >{{post.contents}}</textarea>
      </div>
      <div class='form-group'>
        <button type='submit' class='btn btn-primary'>Submit Changes</button>
      </div>
    </form>
  </div>

  {{#if posts.length}}
    <div class='col-md-6 project-list'>
      <h3>My Posts:</h3>
      <div class='row mb-2 postdiv'>
        {{#each posts as |post|}}
          <div class='col-md-8'>
            <h4><a href='/post/{{post.id}}'>{{post.title}}</a></h4>
          </div>
          {{!-- <div class='col-md-4'>
            <button
              class='btn btn-sm btn-danger delbtn'
              id='del-{{post.id}}'
              data-id='{{post.id}}'
              data-operation='delete'
            >
              DELETE
            </button>
            <button
              class='btn btn-sm editbtn'
              id='edit-{{post.id}}'
              data-id='{{post.id}}'
              data-operation='edit'
            >EDIT</button>
          </div> --}}
        {{/each}}
      </div>
    </div>
  {{/if}}
</div>

<script src='/js/editPost.js'></script>