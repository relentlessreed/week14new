<!-- Loop over each object in the projects array -->
{{#each posts as |post|}}
  <a href='/post/{{post.id}}'>
    <div class='col-md-12'>
      <div class='card'>
        <div class='card-header'>
          <h2>{{post.title}}</h2>
          <p>Created by
            {{post.user.name}}
            on
            {{format_date post.date_created}}</p>
            </a>
        </div>
        <div class='card-body'>
          <p>
            {{post.contents}}
          </p>
        </div>
      </div>
    </div>  
{{/each}}

